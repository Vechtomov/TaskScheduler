@model TaskScheduler.Models.Task

@{
    @ViewBag.Title = "Создание задачи";
}

<div class="row">
    @using (Html.BeginForm("Create", "Task", FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.AntiForgeryToken()
    <h4>Создание новой задачи</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "col-md-10 form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "col-md-10 form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExpirationDate, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.ExpirationDate, new { @class = "col-md-10 form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Создать"/>
        </div>
    </div>
}
</div>
